include partials/header

section.hero-wrap.hero-wrap-2(style="background-image: url('/images/bg_4.jpg');" data-stellar-background-ratio='0.5')
    .overlay
    .container
        .row.no-gutters.slider-text.align-items-center.justify-content-center
            .col-md-9.ftco-animate.text-center
                h1.mb-2.bread(style='margin-top:50px;') Database
                p.breadcrumbs
                    span.mr-2
                        a(href='/eventDatabase')
                            | Event DataBase
                p.breadcrumbs
                    span.mr-2
                        a(href='/contactDatabase')
                            | Contact DataBase
                p.breadcrumbs
                    span.mr-2
                        a(href='/userDatabase')
                            | User DataBase

.row(style='margin-top:50px; margin-bottom:50px;')
  div.col-lg-4.offset-lg-4
      form.contact-form(action=`/event/email/${id}` method='POST')
        .row
            .col-lg-12.d-flex.flex-column.mb-20
                input(type='hidden', name='_csrf', value=_csrf)
                input.form-control(name='name' placeholder='Sender' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Contact Name'"  type='text')
            .col-lg-12.d-flex.flex-column.mb-20
                input.form-control(name='emailAddress' placeholder='Recipient Email Address' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'" type='email')
            .col-lg-12.d-flex.flex-column
                textarea.form-control(name='postMessage' placeholder='Post a message' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Post a message'" )
            .col-lg-12.d-flex.justify-content-end
                input.btn.btn-primary.py-3.px-5(type='submit' value='Send Email')
            .alert-msg


include partials/footer
