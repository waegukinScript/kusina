      .container
        .row.no-gutters.slider-text.align-items-center.justify-content-center
          .col-md-9.ftco-animate.text-center
            h1.mb-2.bread Make Reservation
            p.breadcrumbs
              span.mr-2
                a(href='index.html')
                  | Home 
                  i.ion-ios-arrow-forward
              span
                | Reservation 
                i.ion-ios-arrow-forward
    section.ftco-section.ftco-no-pt.ftco-no-pb
      .container
        .row.d-flex
          .col-md-5.ftco-animate.img.img-2(style='background-image: url(images/bg_6.jpg);')
          .col-md-7.ftco-animate.makereservation.p-4.p-md-5
            .heading-section.ftco-animate.mb-5
              span.subheading Book a Table
              h2.mb-4 Make Reservation
            form(action='#')
              .row
                .col-md-6
                  .form-group
                    label(for='') Name
                    input.form-control(type='text', placeholder='Your Name')
                .col-md-6
                  .form-group
                    label(for='') Email
                    input.form-control(type='text', placeholder='Your Email')
                .col-md-6
                  .form-group
                    label(for='') Phone
                    input.form-control(type='text', placeholder='Phone')
                .col-md-6
                  .form-group
                    label(for='') Phone
                    input#book_date.form-control(type='text', placeholder='Date')
                .col-md-6
                  .form-group
                    label(for='') Time
                    input#book_time.form-control(type='text', placeholder='Time')
                .col-md-6
                  .form-group
                    label(for='') Person
                    .select-wrap.one-third
                      .icon
                        span.ion-ios-arrow-down
                      select.form-control(name='', id='')
                        option(value='') Person
                        option(value='') 1
                        option(value='') 2
                        option(value='') 3
                        option(value='') 4+
                .col-md-12.mt-3
                  .form-group
                    input.btn.btn-primary.py-3.px-5(type='submit', value='Make a Reservation')
    footer.ftco-footer.ftco-bg-dark.ftco-section
      .container
        .row.mb-5
          .col-md-6.col-lg-3
            .ftco-footer-widget.mb-4
